<div id="carousel-product-{{ product.handle }}" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->  
  <ol class="carousel-indicators">
    {% for image in product.images %}      
    {% unless forloop.length < 2 %}
    <li data-target="#carousel-product-{{ product.handle }}" data-slide-to="{{ forloop.index | minus:1 }}"{% if forloop.first %} class="active"{% endif %}></li>
    {% endunless %}
    {% endfor %}
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner" role="listbox">
  {% for image in product.images %}
    <div class="item{% if forloop.first %} active{% endif %}">
      <img src="{{ image | img_url: '800x', format:'pjpg', scale:2 }}" alt="{{ image.alt }}" class="img-responsive">
    </div>
  {% endfor %}
  </div>
</div>