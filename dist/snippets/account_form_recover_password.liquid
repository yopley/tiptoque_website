{% form 'recover_customer_password' %}
{% capture form_feedback %}
{% if form.errors %}
  <div class="form-feedback error">
    <div class="form-feedback--content">
    {{ form.errors | default_errors | replace: "errors", "form-feedback error errors" }}
    </div>
  </div>
{% endif %}
{% endcapture %}
{% if form.posted_successfully? %}
{% capture form_feedback %}
  <div class="form-feedback">
    <div class="form-feedback--content">
    {{ 'account.login.recovery_confirmation' | t }}
    </div>
  </div>
{% endcapture %}
{% else %}
  <div class="form-group">
    <label for="customer_email">{{ 'account.login.email' | t }}</label>    
    <input type="email" class="form-control" name="email" placeholder="{{ 'account.login.email_placeholder' | t }}"{% if customer %} value="{{ customer.email }}"{% endif %}  />
  </div>	
  <input type="submit" value="Envoyer" class="btn full solid" />
  <p class="lighter">{{ 'account.login.recovery_message' | t }}</p>            
{% endif %}
{% endform %}	