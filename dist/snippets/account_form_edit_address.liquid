<div id="EditAddress_{{ address.id }}">
{% form 'customer_address', address, class: 'form-horizontal edit-address-form' %}

<div class="form-group">
  <label for="AddressCompany" class="col-md-3 control-label">{{ 'account.addresses_content.forms.company' | t }}</label>
  <div class="col-md-9">
  <input type="text" id="AddressCompany{{ address.id }}" name="address[company]" value="{{ form.company }}" class="form-control">
  </div>
</div>

<div class="form-group">
  <label for="AddressAddress1" class="col-md-3 control-label">{{ 'account.addresses_content.forms.address1' | t }}</label>
  <div class="col-md-9">
  <input type="text" id="AddressAddress1{{ address.id }}" name="address[address1]" value="{{ form.address1 }}" class="form-control" required>
  </div>
</div>

<div class="form-group">
  <label for="AddressAddress2" class="col-md-3 control-label">{{ 'account.addresses_content.forms.address2' | t }}</label>
  <div class="col-md-9">
  <input type="text" id="AddressAddress2{{ address.id }}" name="address[address2]" value="{{ form.address2 }}" class="form-control">
  </div>
</div>

<div class="form-group">
  <label for="AddressZip" class="col-md-3 control-label">{{ 'account.addresses_content.forms.zip' | t }}</label>
  <div class="col-md-9">
  <input type="text" id="AddressZip{{ address.id }}" name="address[zip]" value="{{ form.zip }}" autocapitalize="characters" class="form-control" required>
  </div>
</div>

<div class="form-group">
  <label for="AddressCity" class="col-md-3 control-label">{{ 'account.addresses_content.forms.city' | t }}</label>
  <div class="col-md-9">
  <input type="text" id="AddressCity{{ address.id }}" name="address[city]" value="{{ form.city }}" class="form-control" required>
  </div>
</div>

<div class="form-group">
  <label for="AddressCountry" class="col-md-3 control-label">{{ 'account.addresses_content.forms.country' | t }}</label>
  <div class="col-md-9">
  <select id="AddressCountry{{ address.id }}" name="address[country]" data-default="{{ form.country }}" class="form-control">{{ country_option_tags }}</select>
  </div>
</div>

<div class="form-group">
  <label for="AddressPhone" class="col-md-3 control-label">{{ 'account.addresses_content.forms.phone' | t }}</label>
  <div class="col-md-9">
  <input type="tel" id="AddressPhone{{ address.id }}" name="address[phone]" value="{{ form.phone }}" class="form-control">
  </div>
</div>

<div class="form-group">
  <div class="col-md-offset-3 col-md-9">
    <div class="checkbox">
      <label>
      {{ form.set_as_default_checkbox }} {{ 'account.addresses_content.forms.set_default' | t }}
      </label>
    </div>
  </div>  
</div>
<div class="form-group">
  <div class="col-md-offset-3 col-md-9">
    <input type="submit" class="btn solid edit-address" value="{{ 'account.addresses_content.forms.edit' | t }}">
  </div>
</div>
{% endform %}
</div>