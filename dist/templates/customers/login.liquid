<section id="banner">
  {% section 'account_banner' %}
</section>

<nav id="stickyMenu">
<section id="collections_nav">
  {% section 'menu_collections' %}
</section>

<section id="delivery_nav">
  {% section 'menu_livraison' %}
</section>
  
<div id="mobileMenuToggle" class="hidden-md hidden-lg">
	{% section 'menu_livraison_mobile_button' %}
</div>  
</nav>

<section id="login">
  <div class="container page-container">
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        {% form 'customer_login' %}
        {% if form.errors %}
         <div class="form-feedback">
           <div class="form-feedback--content">
          {{ form.errors | default_errors }}
           </div>
         </div>    
        {% endif %} 
             
          <div class="form-group">
            <label for="customer_email">{{ 'account.login.email' | t }}</label>
            <input type="email" class="form-control" name="customer[email]" placeholder="{{ 'account.login.email_placeholder' | t }}" required autocomplete="on">
          </div>
          <div class="form-group">
            <label for="customer_password">{{ 'account.login.password' | t }}</label>
            <input class="form-control" type="password" name="customer[password]" placeholder="{{ 'account.login.password_placeholder' | t }}" required autocomplete="on">
          </div>         

          <input type="submit" value="{{ 'account.login.connection' | t }}" class="btn full solid" />
        {% endform %}
        
        {% if shop.checkout.guest_login %}        
          {% form 'guest_login' %}
          <p><input type="submit" value="{{ 'account.login.guest_login' | t }}" class="btn full" /></p>
          {% endform %}   
        {% endif %}
               
        <p><small><a role="button" class="lighter" data-toggle="collapse" href="#recoverForm" aria-expanded="false" aria-controls="recoverForm">{{ 'account.login.forgotten_password' | t }}</a></small></p>
        
        <div class="collapse" id="recoverForm">
          <br/>
          {% include 'account_form_recover_password' %}
        </div>
        
      </div>
    </div>
    <br>
    <div class="row">
      <div class="col-md-8 col-md-offset-2 text-center">
        <p class="bolded create-account-cta">{{ 'account.login.create_account_disclaimer' | t }}</p>
        <a href="/account/register" class="btn" role="button">{{ 'account.login.create_account' | t }}</a>
      </div>
    </div>
  </div>
</section>
