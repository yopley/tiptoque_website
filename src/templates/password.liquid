{% layout 'password' %}

<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4 col-sm-8 col-sm-offset-2">
      <br/><br/>
      <h1 class="text-center">{{ shop.name }}</h1>
      <br/>
      {% unless shop.password_message == blank %}
      <p class="lighter text-center">{{ shop.password_message }}</p>
      {% endunless %}

      <br/>
      {% form 'storefront_password', class: 'center-block' %}

      {{ form.errors | default_errors }}

      <div class="form-group">
        <label for="password">{{ 'layout.password_page.enter_store_label' | t }}</label>
        <input type="password" name="password" class="form-control">
      </div>
      <input type="submit" class="btn full" value="{{ 'layout.password_page.enter_store_button' | t }}">

      {% endform %}
    </div>
  </div>
</div>