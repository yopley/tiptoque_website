{% form 'customer_address', customer.new_address, class: 'form-horizontal' %}

<div class="form-group">
  <label for="AddressCompanyNew" class="col-md-3 control-label">{{ 'account.addresses_content.forms.company' | t }}</label>
  <div class="col-md-9">
  <input type="text" id="AddressCompanyNew" name="address[company]" value="{{ form.company }}" class="form-control">
  </div>
</div>

<div class="form-group">
  <label for="AddressAddress1New" class="col-md-3 control-label">{{ 'account.addresses_content.forms.address1' | t }}</label>
  <div class="col-md-9">
  <input type="text" id="AddressAddress1New" name="address[address1]" value="{{ form.address1 }}" class="form-control" required>
  </div>
</div>

<div class="form-group">
  <label for="AddressAddress2New" class="col-md-3 control-label">{{ 'account.addresses_content.forms.address2' | t }}</label>
  <div class="col-md-9">
  <input type="text" id="AddressAddress2New" name="address[address2]" value="{{ form.address2 }}" class="form-control">
  </div>
</div>

<div class="form-group">
  <label for="AddressZipNew" class="col-md-3 control-label">{{ 'account.addresses_content.forms.zip' | t }}</label>
  <div class="col-md-9">
  <input type="text" id="AddressZipNew" name="address[zip]" value="{{ form.zip }}" autocapitalize="characters" class="form-control" required>
  </div>
</div>

<div class="form-group">
  <label for="AddressCityNew" class="col-md-3 control-label">{{ 'account.addresses_content.forms.city' | t }}</label>
  <div class="col-md-9">
  <input type="text" id="AddressCityNew" name="address[city]" value="{{ form.city }}" class="form-control" required>
  </div>
</div>

<div class="form-group">
  <label for="AddressCountryNew" class="col-md-3 control-label">{{ 'account.addresses_content.forms.country' | t }}</label>
  <div class="col-md-9">
  <select id="AddressCountryNew" name="address[country]" data-default="{{ form.country }}" class="form-control">{{ country_option_tags }}</select>
  </div>
</div>

<div class="form-group">
  <label for="AddressPhoneNew" class="col-md-3 control-label">{{ 'account.addresses_content.forms.phone' | t }}</label>
  <div class="col-md-9">
  <input type="tel" id="AddressPhoneNew" name="address[phone]" value="{{ form.phone }}" class="form-control">
  </div>
</div>

<div class="form-group">
  <div class="col-md-offset-3 col-md-9">
    <div class="checkbox">
      <label>
      {{ form.set_as_default_checkbox }} {{ 'account.addresses_content.forms.set_default' | t }}
      </label>
    </div>
  </div>  
</div>
<div class="form-group">
  <div class="col-md-offset-3 col-md-9">
    <input type="submit" class="btn solid" value="{{ 'account.addresses_content.forms.add' | t }}">
  </div>
</div>
{% endform %}