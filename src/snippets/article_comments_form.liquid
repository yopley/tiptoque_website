<div class="formcom">
    {% if comment and comment.created_at %}
        <p class="note form-success">
          {% if blog.moderated? %}
            {{ 'blog.comments.success_moderated' | t }}
          {% else %}
            {{ 'blog.comments.success' | t }}
          {% endif %}
        </p>
    {% endif %}
    {% form 'new_comment', article %}

  	<h5 class="text-uppercase">{{ 'blog.comments.title' | t }}</h5>

        {{ form.errors | default_errors }}
        
          <div class="form-group">
            <label for="CommentAuthor" class="labely">{{ 'blog.comments.name' | t }}</label>
            <input class="form-control{% if form.errors contains "author" %}  error{% endif %}" type="text" name="comment[author]" placeholder="{{ 'blog.comments.name' | t }}" id="CommentAuthor" value="{{ form.author }}" autocapitalize="words">
          </div>
          <div class="form-group">
            <label for="CommentEmail" class="labely">{{ 'blog.comments.email' | t }}</label>
            <input class="form-control{% if form.errors contains "author" %}  error{% endif %}" type="email" name="comment[email]" placeholder="{{ 'blog.comments.email' | t }}" id="CommentEmail" value="{{ form.email }}" autocorrect="off" autocapitalize="off">
          </div>

          <div class="form-group">
            <label for="CommentBody" class="labely">{{ 'blog.comments.message' | t }}</label>
            <textarea class="form-control{% if form.errors contains "author" %}  error{% endif %}" name="comment[body]" id="CommentBody" placeholder="{{ 'blog.comments.message' | t }}">{{ form.body }}</textarea>
          </div>

        {% if blog.moderated? %}
          <p><small>{{ 'blog.comments.moderated' | t }}</small></p>
        {% endif %}

        <input type="submit" class="btn" value="{{ 'blog.comments.post' | t }}">

    {% endform %}
 </div>