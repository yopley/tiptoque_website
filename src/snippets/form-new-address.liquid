<div id="add_address">
{% form 'customer_address' , customer.new_address %}
  {% if form.errors %}
      <div class="form-feedback">
      {{ form.errors | default_errors }}
      </div>
  {% endif %}

          <div class="form-group">
            <label for="first_name">{{ 'account.addresses_content.forms.first_name' | t }}</label>
            <input type="text" class="form-control" id="firstName_{{ form.id }}" name="address[first_name]" value="">
          </div> 
          <div class="form-group">
            <label for="last_name">{{ 'account.addresses_content.forms.last_name' | t }}</label>
            <input type="text" class="form-control" id="lastName_{{ form.id }}" name="address[last_name]" value="">
          </div> 
          <div class="form-group">
              <label for="AddressAddress1_{{ form.id }}">{{ 'account.addresses_content.forms.address1' | t }}</label>
              <input type="text" class="form-control" id="AddressAddress1_{{ form.id }}" name="address[address1]" value="">
          </div>
          <div class="form-group">	
              <label for="AddressAddress2_{{ form.id }}">{{ 'account.addresses_content.forms.address2' | t }}</label>
              <input type="text" class="form-control" id="AddressAddress2_{{ form.id }}" name="address[address2]" value="">
          </div>
          <div class="form-group">
              <label for="AddressCity_{{ form.id }}">{{ 'account.addresses_content.forms.city' | t }}</label>
              <input type="text" class="form-control" id="AddressCity_{{ form.id }}" name="address[city]" value="">
          </div>
          <div class="form-group">
              <label for="AddressZip_{{ form.id }}">{{ 'account.addresses_content.forms.zip' | t }}</label>
              <input type="text" class="form-control" id="AddressZip_{{ form.id }}" name="address[zip]" value="" autocapitalize="characters">
          </div>
          <div class="form-group">
              <label for="AddressCountry_{{ form.id }}">{{ 'account.addresses_content.forms.country' | t }}</label>
              <select id="AddressCountry_{{ form.id }}" class="address-country-option form-control" data-form-id="{{ form.id }}" name="address[country]" data-default="{{ form.country }}">{{ country_option_tags }}</select>
          </div>
          <div class="form-group">
              <label for="AddressPhone_{{ form.id }}">{{ 'account.addresses_content.forms.phone' | t }}</label>
              <input type="tel"class="form-control" id="AddressPhone_{{ form.id }}" name="address[phone]" value="">
          </div>	
        <button type="submit" class="btn full">{{ 'account.addresses_content.new_confirmation' | t }}</button> 
  
{% endform %}
</div>