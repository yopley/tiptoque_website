        ]
      }
    ],
    "presets": [{
      "name": "Slideshow Visiteur",
      "category": "Image",
      "settings": {
      },
      "blocks": [
        {
          "type": "image"
        },
        {
          "type": "image"
        }
      ]
    }]
  }
