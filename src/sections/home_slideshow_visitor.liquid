<div data-section-id="{{ section.id }}" data-section-type="slideshow-section">
  {% unless customer %}
  {% if section.blocks.size > 0 %}
  <div id="carouselVisitor" class="carousel slide" data-ride="carousel">
    {% if section.blocks.size > 1 %}
    <!-- Indicators -->
    <ol class="carousel-indicators hidden-sm hidden-xs">
      {% for block in section.blocks %}
      <li data-target="#carouselVisitor" data-slide-to="{{ forloop.index | minus:1 }}"{% if forloop.first %} class="active"{% endif %}></li>
      {% endfor %}
    </ol>
    {% endif %}

    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">
     {% for block in section.blocks %}
      <div class="item{% if forloop.first %} active{% endif %}">
        {% unless block.settings.link == blank %}  
        <a href="{{ block.settings.link }}">
        {% endunless %}
          <img src="{{ block.settings.image | img_url: '1920x500', format:'pjpg', crop:'center' }}" alt="{{ block.settings.image.alt }}" class="img-responsive center-block">
          <div class="carousel-caption">          
            <div class="text-{{ block.settings.alignment }}">
              {% unless block.settings.logo == blank %}
              <div class="logo-container">
                <div class="logo--content">
                  <img src="{{ block.settings.logo | img_url: '60x', scale: '2' }}" alt="{{ block.settings.image.alt }}" class="img-responsive center-block">
                </div>
              </div>
              {% endunless %}                
              {% unless block.settings.title == blank %}
              <h1>{{ block.settings.title }}</h1>
              {% endunless %}
              {% unless block.settings.subtitle == blank %}
              <h2>{{ block.settings.subtitle }}</h2>
              {% endunless %}
              {% unless block.settings.call_to_action == blank %}          
              <a href="{{ block.settings.link }}" class="btn">{{ block.settings.call_to_action }}</a>
              {% endunless %} 
            </div>
          </div>
        {% unless block.settings.link == blank %}  
        </a>
        {% endunless %}          
      </div>
      {% endfor %}
    </div>

    {% if section.blocks.size > 1 %}
    {% for block in section.blocks %}
    <!-- Controls -->
    <a class="left carousel-control" href="#carouselVisitor" role="button" data-slide="prev">
      <span class="icon glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#carouselVisitor" role="button" data-slide="next">
      <span class="icon glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
    {% endfor %}
    {% endif %}
    
  </div>
  {% endif %}
  {% endunless %}
</div>

