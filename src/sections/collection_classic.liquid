{% assign classic_display = true %}
{% assign current_handle = collection.handle %}

{% unless section.blocks.size < 1 %}
{% for block in section.blocks %}
{% if block.settings.handle == current_handle %}
{% assign classic_display = false %}
{% assign collection = collections[block.settings.collection] %}
{% include 'collection_classic_display' %}
{% else %}
{% continue %}
{% endif %}
{% endfor %}
{% endunless %}

{% if classic_display %}
{% include 'collection_classic_display' %}
{% endif %}

