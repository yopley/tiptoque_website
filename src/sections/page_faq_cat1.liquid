{% unless section.blocks.size < 1 %}
<div class="row faq-row">
  <div class="col-md-10 col-md-offset-1">    
    <div class="panel cat-panel panel-default" role="button" data-toggle="collapse" href="#collapseCat1" aria-expanded="false" aria-controls="collapseCat1">
      <div class="panel-heading">
        <h4 class="panel-title">
          {{ section.settings.title }}
        </h4>
      </div>
    </div>    
    
    <div class="collapse in" id="collapseCat1">
      
      <div class="panel-group" id="accordioncat1" role="tablist" aria-multiselectable="true">
        
        {% for block in section.blocks %}
        <div class="panel panel-default{% unless forloop.first %} collapsed{% endunless %}" role="button" id="headingcat1{{ forloop.index }}" role="button" data-toggle="collapse" data-parent="#accordioncat1" href="#collapsecat1{{ forloop.index }}" aria-expanded="true" aria-controls="collapsecat1{{ forloop.index }}">
          <div class="panel-heading" role="tab" id="headingcat1{{ forloop.index }}">
            <h4 class="panel-title">
                {{ block.settings.question }}
            </h4>
          </div>
          <div id="collapsecat1{{ forloop.index }}" class="panel-collapse collapse{% if forloop.first %} in{% endif %}" role="tabpanel" aria-labelledby="headingcat1{{ forloop.index }}">
            <div class="panel-body">
              <div class="rte">
                {{ block.settings.answer }}
              </div>
            </div>
          </div>
        </div>
        {% endfor %}
        
      </div>
      
      
      
    </div>    
    
  </div>
</div>
{% endunless %}


{% schema %}
  {
    "name": "FAQ Catégorie 1",
    "max_blocks": 15,
    "settings": [
      {
      "type": "text",
      "id": "title",
      "label": "Intitulé de catégorie",
      "default": "Les bons petits plats de nos chefs"
      }
    ],
    "blocks": [
      {
        "type": "radio",
        "name": "Question Réponse",
        "settings": [
          {
            "type": "text",
            "id": "question",
            "label": "Question"
          },
          {
            "type": "richtext",
            "id": "answer",
            "label": "Réponse"
          }
        ]
      }
    ]
  }
{% endschema %}

